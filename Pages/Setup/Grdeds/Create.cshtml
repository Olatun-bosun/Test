@page
@model HRMSApplication.Pages.Setup.Grdeds.CreateModel
@{
}

<h2 class="my-3">New Grade Deduction</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
else if (Model.successMessage.Length > 0)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST" enctype="multipart/form-data">
    
    <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Deduction Name</label>
    <div class="col-sm-6">

    <select class="form-select" asp-for="DedName">
    @foreach (var item in Model.listMaindeds)
    {
    <option value='@item.DedName	'>@item.DedName	</option>
    }
    </select>

    <span asp-validation-for="DedName" class="text-danger"></span>
    </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Amount</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="Value1" />
            <span asp-validation-for="Value1" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Steps</label>
        <div class="col-sm-6">

            <select class="form-select" asp-for="Steps">
                @foreach (var item in Model.listSteps)
                {
                    <option value='@item.Name	'>@item.Name	</option>
                }
            </select>

            <span asp-validation-for="Steps" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Grade</label>
        <div class="col-sm-6">

            <select class="form-select" asp-for="Grade">
                @foreach (var item in Model.listGrades)
                {
                    <option value='@item.GradeName	'>@item.GradeName	</option>
                }
            </select>

            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Setup/Grdeds/Index" role="button">Cancel</a>
        </div>
    </div>
</form>